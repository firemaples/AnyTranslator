{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "baseBranches": [
    "dep/updates"
  ],
  "ignorePaths": [
    "deprecated/",
    "gradle/"
  ],
  "assignees": [
    "firemaples@gmail.com"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "com.android.tools.build:gradle"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "schedule": [
    "after 6pm every weekday",
    "before 8am every weekday",
    "every weekend"
  ],
  "prHourlyLimit": 0,
  "timezone": "Japan"
}
